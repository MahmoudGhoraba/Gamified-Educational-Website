        <div class="rightLine"></div>

        <div class="googleGroup">
            <div class="rGoogle"></div>
            <div class="Google">Google</div>
            <div class="googleLogo">
                <img src="/resources/googleLogo.png" alt="Google Logo">
            </div>
        </div>

        <div class="FacebookGroup">
            <div class="rFacebook"></div>
            <div class="Facebook">
                <div class="FacebookLogo">
                    <img src="/resources/facebookLogo.png" alt="Facebook Logo">
                </div>
                <div class="FacebookText">Facebook</div>
            </div>
        </div>

        <form id="signupForm" method="post">
            <div class="EmailSection">
                <label for="email" class="Email">Email</label>
                <input type="email" id="email" name="email" class="rEmail" placeholder="Enter your email" required>
            </div>
            <div class="PasswordSection">
                <label for="pw" class="Password">Password</label>
                <input type="password" id="pw" name="pw" class="rPassword" placeholder="Enter your password" required>
            </div>
            <div class="roleRadio">
                <label>
                    <input type="radio" name="role" value="A" required> Admin
                </label>
                <label>
                    <input type="radio" name="role" value="L" required> Learner
                </label>
                <label>
                    <input type="radio" name="role" value="I" required> Instructor
                </label>
            </div>
            <button class="Button" type="submit">
                <span class="LogIn">Sign Up</span>
            </button>
        </form>

        <div class="LoginIntoYourAccount">Create your account</div>
        <div class="WelcomeBack">Join Us!</div>
    </div>

    <div class="DontHaveAnAccount">Already have an account?</div>
    <div class="SignUp">
        <a href="@Url.Action("Index", "Home")">Login here!</a>
    </div>

    <div class="trademark">
        <div class="LogoHere">Spaghetti's</div>
        <div class="logoImage">
            <img src="/resources/SLE_LOGO.png" alt="Spaghetti's Logo">
        </div>
    </div>
</div>
<!-- Success Modal -->
<div id="successModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Success</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Sign up successful!</p>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#signupForm').submit(function (event) {
            event.preventDefault();
            $.ajax({
                type: 'POST',
                url: '@Url.Action("Index2", "Signup")',
                data: $(this).serialize(),
                success: function (response) {
                    if (response.success) {
                        $('#successModal').css('display', 'flex');

                        // Set timeout for automatic redirection after 2 seconds
                        setTimeout(function () {
                            let redirectUrl = '';
                            switch (response.role) {
                                case 'A':
                                    redirectUrl = '@Url.Action("Create", "Admin")';
                                    break;
                                case 'L':
                                    redirectUrl = '@Url.Action("Values", "LI")';
                                    break;
                                case 'I':
                                    redirectUrl = '@Url.Action("Info", "IN")';
                                    break;
                            }
                            window.location.href = redirectUrl;
                        }, 2000);
                    } else {
                        alert(response.message);
                    }
                }
            });
        });
    });
</script>
