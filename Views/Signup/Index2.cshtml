@{
    ViewData["Title"] = "Sign Up Page";
}

<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up Page</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Fjalla One', sans-serif;
        }

        .signup-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .card {
            width: 100%;
            max-width: 400px;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 8px 24px rgba(0,0,0,0.1);
        }

        .card h1 {
            text-align: center;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .form-control {
            border-radius: 50px;
        }

        .btn-primary {
            border-radius: 50px;
        }

        .role-radio {
            display: flex;
            justify-content: space-around;
            margin: 15px 0;
        }

        .role-radio label {
            font-weight: bold;
        }

        .btn-submit {
            width: 100%;
            border-radius: 50px;
            font-weight: bold;
        }

        .modal-content {
            border-radius: 10px;
        }
    </style>
</head>
<body>
<div class="signup-container">
    <div class="card">
        <h1>Sign Up</h1>
        <p class="text-center">Create an account</p>
        <form id="signupForm" method="post">
            <div class="form-group">
                <label for="email">Email</label>
                <input id="email" name="email" type="email" class="form-control" required minlength="3" maxlength="50" placeholder="Enter your email">
            </div>
            <div class="form-group">
                <label for="pw">Password</label>
                <input id="pw" name="pw" type="password" class="form-control" required minlength="8" maxlength="20" placeholder="Enter your password">
            </div>
            <div class="role-radio">
                <label>
                    <input id="Radio1" name="role" type="radio" value="A" /> Admin
                </label>
                <label>
                    <input id="Radio2" name="role" type="radio" value="L" /> Learner
                </label>
                <label>
                    <input id="Radio3" name="role" type="radio" value="I" /> Instructor
                </label>
            </div>
            <button type="submit" class="btn btn-primary btn-submit">Submit</button>
        </form>
    </div>
</div>

<!-- Success Modal -->
<div id="successModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Success</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Sign up successful!</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="redirectButton">OK</button>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#signupForm').submit(function (event) {
            event.preventDefault();
            $.ajax({
                type: 'POST',
                url: '@Url.Action("Index2", "Signup")',
                data: $(this).serialize(),
                success: function (response) {
                    if (response.success) {
                        $('#successModal').modal('show');
                        $('#redirectButton').click(function () {
                            var redirectUrl = '';
                            switch (response.role) {
                                case 'A':
                                    redirectUrl = '@Url.Action("Create", "Admin")';
                                    break;
                                case 'L':
                                    redirectUrl = '@Url.Action("Values", "LI")';
                                    break;
                                case 'I':
                                    redirectUrl = '@Url.Action("Info", "IN")';
                                    break;
                            }
                            window.location.href = redirectUrl;
                        });
                    } else {
                        alert(response.message);
                    }
                }
            });
        });
    });
</script>
</body>
</html>
