@{
    ViewData["Title"] = "Instructor Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        /* Add the improved CSS here */
        /* Base styles */
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            font-family: 'Poppins', sans-serif;
            background: #f4f8f5;
            color: #2c3e50;
        }

        .container {
            max-width: 1200px;
            margin: 80px auto;
            padding: 20px;
        }

        h1 {
            font-size: 2.5rem;
            color: #3a3e3b;
            margin-bottom: 40px;
            text-align: center;
        }

        .alert {
            padding: 15px 25px;
            border-radius: 10px;
            margin-bottom: 30px;
            font-weight: 500;
            text-align: center;
        }

        .alert-success {
            background: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }

        .alert-danger {
            background: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }

        .alert-info {
            background: #d1ecf1;
            color: #0c5460;
            border: 1px solid #bee5eb;
        }

        .alert-warning {
            background: #fff3cd;
            color: #856404;
            border: 1px solid #ffeeba;
        }

        /* Form styling */
        .form-section {
            background: #f6f3f3;
            padding: 40px;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
            margin-bottom: 40px;
        }

        .form-section h2 {
            font-size: 1.8rem;
            color: #189A3A;
            margin-bottom: 30px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .form-group {
            margin-bottom: 25px;
        }

        .form-control {
            width: 90%;
            padding: 0.75rem 1rem;
            border: 2px solid #e2e8f0;
            border-radius: 0.5rem;
            font-size: 1rem;
            transition: all 0.2s ease;
            background: #f8fafc;
        }

        .form-control:focus {
            border-color: #189A3A;
            box-shadow: 0 0 0 3px rgba(24, 154, 58, 0.1);
            background: white;
            outline: none;
        }

        label {
            display: block;
            margin-bottom: 8px;
            color: #3a3e3b;
            font-weight: 500;
        }

        /* Button styles */
        .btn {
            padding: 12px 30px;
            border-radius: 8px;
            font-weight: 500;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            text-decoration: none;
            cursor: pointer;
            border: none;
        }

        .btn-primary {
            background: #189A3A;
            color: white;
        }

        .btn-primary:hover {
            background: #117a2d;
            transform: translateY(-2px);
        }

        .btn-danger {
            background: #dc3545;
            color: white;
        }

        .btn-danger:hover {
            background: #bb2d3b;
            transform: translateY(-2px);
        }

        .btn-warning {
            background: #ffc107;
            color: black;
        }

        .btn-secondary {
            background: #6c757d;
            color: white;
        }

        .btn-group {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
            gap: 15px;
            margin-top: 30px;
        }

        /* Action grid */
        .action-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-top: 40px;
        }

        .action-card {
            background: white;
            padding: 25px;
            border-radius: 15px;
            text-align: center;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
            transition: all 0.3s ease;
        }

        .action-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }

        .action-card i {
            font-size: 2rem;
            color: #189A3A;
            margin-bottom: 15px;
        }

        .action-card h3 {
            font-size: 1.5rem;
            color: #2c3e50;
            margin: 15px 0;
        }

        .action-card p {
            font-size: 1rem;
            color: #4a5568;
            margin-bottom: 20px;
        }

        /* Full-width forms */
        .full-width-form {
            background: white;
            padding: 30px;
            border-radius: 15px;
            margin: 20px 0;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        }

        .form-card {
            display: flex;
            flex-direction: column;
            height: 100%;
            background: white;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
        }

        .form-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }

        .form-card form {
            flex: 1;
            display: flex;
            flex-direction: column;
        }

        .form-card .form-group {
            margin-bottom: 15px;
        }

        .form-card .btn {
            margin-top: auto;
            width: 100%;
            justify-content: center;
        }

        .form-card-header {
            margin-bottom: 1.5rem;
            padding-bottom: 1rem;
            border-bottom: 2px solid #f1f5f9;
        }

        .form-card-header i {
            font-size: 2rem;
            color: #189A3A;
            margin-bottom: 15px;
        }

        .form-card h3 {
            margin: 0 0 10px 0;
            color: #2c3e50;
        }

        .form-actions {
            margin-top: 2rem;
            padding-top: 1.5rem;
            border-top: 2px solid #f1f5f9;
        }

        .action-link-card {
            display: flex;
            flex-direction: column;
            height: 80%;
            background: white;
            border-radius: 15px;
            padding: 30px;
            text-align: center;
            transition: all 0.3s ease;
            color: #2c3e50;
            text-decoration: none;
        }

        .action-link-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }

        .action-link-card i {
            font-size: 2rem;
            color: #189A3A;
            margin-bottom: 15px;
        }

        .input-group {
            margin-bottom: 1.5rem;
            position: relative;
        }

        .input-group label {
            display: block;
            margin-bottom: 0.5rem;
            color: #4a5568;
            font-weight: 500;
            font-size: 0.9rem;
        }

        .section-title {
            font-size: 1.8rem;
            color: #2c3e50;
            margin: 40px 0 30px 0;
            padding-bottom: 15px;
            border-bottom: 3px solid #189A3A;
            display: inline-block;
        }

        .notification-area {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 1000;
            max-width: 400px;
            width: 90%;
        }

        /* Responsive adjustments */
        @@media (max-width: 768px) {
            .container {
                margin: 40px auto;
                padding: 15px;
            }

            .form-section {
                padding: 25px;
            }

            .action-grid {
                grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            }

            .form-card {
                padding: 20px;
            }

            .dashboard-header h1 {
                font-size: 2rem;
            }

            .section-title {
                font-size: 1.5rem;
            }
        }

        @@media (max-width: 480px) {
            .btn-group {
                grid-template-columns: 1fr;
            }

            .action-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
<div class="container">
    <!-- Header Section -->
    <div class="dashboard-header">
        <h1>Instructor Dashboard <i class="fas fa-chalkboard-teacher"></i></h1>
    </div>

    <!-- Notification Area -->
    <div class="notification-area">
        @if (!string.IsNullOrEmpty(ViewBag.Message))
        {
            <div class="alert @(ViewBag.MessageType == "success" ? "alert-success" : "alert-danger")">
                @ViewBag.Message
            </div>
        }
    </div>

    <!-- Profile Management Section -->
    <div class="form-section">
        <h2><i class="fas fa-user-cog"></i> Profile Management</h2>
        <div class="action-grid">
            <!-- Update Profile Card -->
            <div class="form-card">
                <div class="form-card-header">
                    <i class="fas fa-user-edit"></i>
                    <h3>Update Profile</h3>
                </div>
                <form asp-controller="InstructorDash" asp-action="UpdateInstructor" method="post">
                    <div class="input-group">
                        <label>Name</label>
                        <input type="text" class="form-control" name="name" required>
                    </div>
                    <div class="input-group">
                        <label>Qualifications</label>
                        <input type="text" class="form-control" name="latest_qualifications" required>
                    </div>
                    <div class="input-group">
                        <label>Expertise Area</label>
                        <input type="text" class="form-control" name="expertise_area" required>
                    </div>
                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Update Profile
                        </button>
                    </div>
                </form>
            </div>

            <!-- View Profile Card -->
            <div class="form-card">
                <div class="form-card-header">
                    <i class="fas fa-eye"></i>
                    <h3>View Profile</h3>
                </div>
                <form asp-controller="InstructorDash" asp-action="ShowProfile" method="get">
                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-eye"></i> View Profile
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Course Management Section -->
    <div class="form-section">
        <h2><i class="fas fa-book-open"></i> Course Management</h2>
        <div class="action-grid">
            <a asp-controller="LakshyInstructor" asp-action="InstructorLaksh" class="action-link-card">
                <i class="fas fa-tasks"></i>
                <h3>Manage Courses</h3>
                <p>Organize and update course content</p>
            </a>

            <a asp-controller="InstructorDash" asp-action="ReviewAssessments" class="action-link-card">
                <i class="fas fa-clipboard-check"></i>
                <h3>Review Assessments</h3>
                <p>Evaluate student submissions</p>
            </a>

            <a asp-controller="HighestGradeInstructor" asp-action="HighestGrades" class="action-link-card">
                <i class="fas fa-star"></i>
                <h3>View High Scores</h3>
                <p>Check top-performing students</p>
            </a>
        </div>
    </div>

    <!-- Assessment & Analytics Section -->
    <div class="form-section">
        <h2><i class="fas fa-chart-line"></i> Assessments & Analytics</h2>
        <div class="action-grid">
            <!-- Add Assessment Form -->
            <div class="form-card">
                <div class="form-card-header">
                    <i class="fas fa-plus-circle"></i>
                    <h3>Add Assessment</h3>
                </div>
                <form asp-controller="InstructorDash" asp-action="AddAssessment" method="post">
                    <div class="input-group">
                        <label>Module ID</label>
                        <input type="number" class="form-control" name="ModuleID" required>
                    </div>
                    <div class="input-group">
                        <label>Course ID</label>
                        <input type="number" class="form-control" name="CourseID" required>
                    </div>
                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Create Assessment
                        </button>
                    </div>
                </form>
            </div>

            <!-- Analytics Forms -->
            <div class="form-card">
                <div class="form-card-header">
                    <i class="fas fa-chart-bar"></i>
                    <h3>Course Analytics</h3>
                </div>
                <form asp-controller="InstructorDash" asp-action="AssessmentAnalyticsResult" method="get">
                    <div class="input-group">
                        <label>Course ID</label>
                        <input type="number" class="form-control" name="courseID" required>
                    </div>
                    <div class="input-group">
                        <label>Module ID</label>
                        <input type="number" class="form-control" name="ModuleID" required>
                    </div>
                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-chart-line"></i> Get Analytics
                        </button>
                    </div>
                </form>
            </div>

            <div class="form-card">
                <div class="form-card-header">
                    <i class="fas fa-smile"></i>
                    <h3>Emotional Analysis</h3>
                </div>
                <form asp-controller="InstructorDash" asp-action="EmotionalTrendAnalysis" method="post">
                    <div class="input-group">
                        <label>Time Period</label>
                        <input type="datetime-local" class="form-control" name="timePeriod" required>
                    </div>
                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-chart-pie"></i> Get Analysis
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Learning Tools Section -->
    <div class="form-section">
        <h2><i class="fas fa-tools"></i> Learning Tools</h2>
        <div class="action-grid">
            <a asp-controller="Quests" asp-action="Create" class="action-link-card">
                <i class="fas fa-plus-circle"></i>
                <h3>Create Quest</h3>
                <p>Design new challenges for students</p>
            </a>

            <a asp-controller="Achievements" asp-action="AddAchievement" class="action-link-card">
                <i class="fas fa-trophy"></i>
                <h3>Add Achievement</h3>
                <p>Create new achievements for students</p>
            </a>

            <a asp-controller="Leaderboards" asp-action="LeaderboardRank" class="action-link-card">
                <i class="fas fa-chart-line"></i>
                <h3>Leaderboards</h3>
                <p>View student rankings</p>
            </a>
        </div>
    </div>
</div>
</body>
</html>