@{
    ViewData["Title"] = "Add Assessment";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
    <style>
        /* Base styles matching your existing design */
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            font-family: 'Poppins', sans-serif;
            background: #f4f8f5;
            color: #3a3e3b;
        }

        h1 {
            font-size: 2.5rem;
            color: #3a3e3b;
            margin: 40px 0;
            text-align: center;
        }

        .alert-success {
            background: #e8f5e9;
            color: #2e7d32;
            padding: 20px;
            border-radius: 10px;
            margin: 20px auto;
            max-width: 800px;
            border: 2px solid #a5d6a7;
            text-align: center;
        }

        /* Container styling to match your tables */
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        /* Responsive adjustments */
        @@media (max-width: 768px) {
            h1 {
                font-size: 2rem;
                margin: 30px 0;
            }
            
            .alert-success {
                margin: 20px 15px;
                font-size: 14px;
            }
        }
    </style>
</head>
<body>
<div class="container">
    <h1>Add Assessment</h1>

    @if(ViewBag.Message != null)
    {
        <div class="alert alert-success">
            <p>@ViewBag.Message</p>
        </div>
    }
</div>
</body>
</html>