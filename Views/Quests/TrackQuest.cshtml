@{
    ViewBag.Title = "Track Progress";
}

<h2>Track Progress</h2>

@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <p class="text-warning">@ViewBag.Message</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.Progress)
            {
                <tr>
                    <td>@item.ID</td>
                    <td>@item.Title</td>
                    <td>@item.Status</td>
                </tr>
            }
        </tbody>
    </table>
}
