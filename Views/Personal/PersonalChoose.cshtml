@{
    ViewData["Title"] = "Personal Choose";
    var learnerId = ViewBag.LearnerID as int?;
    var message = ViewBag.Message as string;
    var messageType = ViewBag.MessageType as string;
}

<h1>Personal Choose</h1>

@if (learnerId.HasValue)
{
    <p><strong>Learner ID:</strong> @learnerId</p>
}

@if (!string.IsNullOrEmpty(message))
{
    <div class="alert @(messageType == "success" ? "alert-success" : "alert-danger")">
        @message
    </div>
}

<form asp-controller="Personal" asp-action="Create" method="post">
    <div class="form-group">
        <label for="id">Profile ID:</label>
        <input type="text" class="form-control" id="id" name="id" required />
    </div>
    <div class="form-group">
        <label for="field1">Preferred Content Type:</label>
        <input type="text" class="form-control" id="field1" name="field1" required />
    </div>
    <div class="form-group">
        <label for="field2">Personality Type:</label>
        <input type="text" class="form-control" id="field2" name="field2" required />
    </div>
    <div class="form-group">
        <label for="field3">Emotional State:</label>
        <input type="text" class="form-control" id="field3" name="field3" required />
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>

<form asp-controller="Personal" asp-action="Delete" method="post">
    <div class="form-group">
        <label for="deleteId">Profile ID to Delete:</label>
        <input type="text" class="form-control" id="deleteId" name="id" required />
    </div>
    <button type="submit" class="btn btn-danger">Delete</button>
</form>

<form asp-controller="Personal" asp-action="Go" method="post">
    <div class="form-group">
        <label for="goId">Profile ID to Go:</label>
        <input type="text" class="form-control" id="goId" name="id" required />
    </div>
    <button type="submit" class="btn btn-primary">Go</button>
</form>

<form asp-controller="Personal" asp-action="DeleteAccount" method="post">
    <button type="submit" class="btn btn-danger">Delete Account</button>
</form>

<form asp-controller="Personal" asp-action="Profile" method="post">
    <button type="submit" class="btn btn-info">Profile</button>
</form>

<form asp-controller="LearnersPaths" asp-action="AllPaths" method="get">
    <button type="submit" class="btn btn-success">View Current Paths</button>
</form>

<form asp-controller="Discussion" asp-action="AddPost" method="get">
    <button type="submit" class="btn btn-warning">Add Post</button>
</form>
<form asp-controller="Lakshy" asp-action="LearnerComp2" method="get">
    <button type="submit" class="btn btn-secondary">Laksh</button>
</form>
