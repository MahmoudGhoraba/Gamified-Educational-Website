            word-wrap: break-word
        }

        .DontHaveAnAccount {
            width: 178px;
            height: 17px;
            left: 538px;
            top: 53px;
            position: absolute;
            color: black;
            font-size: 14px;
            font-family: 'Poppins', sans-serif;
            font-weight: 300;
            line-height: 14.50px;
            word-wrap: break-word
        }

        .SignUp {
            width: 58px;
            height: 17px;
            left: 709px;
            top: 53px;
            position: absolute;
            color: #20DC49;
            line-height: 14.50px;
            word-wrap: break-word
        }

        .SignUp a {
            color: #3a3e3b;
            font-size: 14px;
            font-family: 'Poppins', sans-serif;
            font-weight: 500;
            text-decoration: none;
            transition: color 0.3s ease;
        }

        .SignUp a:hover {
            color: #a5ada7;
        }

        .SignUp a:active {
            color: #189A3A;
        }

        .trademark {
            left: 58px;
            top: 40px;
            position: absolute
        }
        .LogoHere {
            left: 40.76px; 
            top: 0px;
            position: absolute;
            color: black;
            font-size: 13px;
            font-family: 'Inter', sans-serif;
            font-weight: 500;
            line-height: 41.12px;
            word-wrap: break-word
        }

        .logoImage {
            position: relative;
            width: 29.49px;
            height: 29.49px;
        }

        .logoImage img {
            width: 100%;
            height: 100%;
            position: absolute;
            top: 0;
            left: 0;
            opacity: 0.40;
        }
    </style>
</head>
<body>
<div class="Login">
    <div class="rightPanel"></div>
    <img class="Picture" src="/resources/login-2.jpg" alt="Mahmoud Ghoraba"/>
    <div class="LoginDetails">

        <div class="OrContinueWith">Or continue with</div>

        <div class="leftLine"></div>

        <div class="rightLine"></div>

        <div class="googleGroup">
            <div class="rGoogle"></div>
            <div class="Google">Google</div>
            <div class="googleLogo">
                <img src="/resources/googleLogo.png" alt="Google Logo">
            </div>
        </div>

        <div class="FacebookGroup">
            <div class="rFacebook"></div>
            <div class="Facebook">

                <div class="FacebookLogo">
                    <img src="/resources/facebookLogo.png" alt="Facebook Logo">
                </div>

                <div class="FacebookText">Facebook</div>
            </div>
        </div>

        <div class="RecoverPassword">
            <a href="#">Recover Password</a>
        </div>

        <form asp-action="Index" asp-controller="Home" method="post" >
            <div class="EmailSection">
                <label for="email" class="Email">Email</label>
                <input type="email" id="email" class="rEmail" name="email" placeholder="Enter your email" required>
            </div>
            <div class="PasswordSection">
                <label for="password" class="Password">Password</label>
                <input type="password" id="password" class="rPassword" name="password" placeholder="Enter your password" required>
            </div>
            <button class="Button" type="submit">
                <span class="LogIn">Login</span>
            </button>
        </form>

        <div class="LoginIntoYourAccount">Login into your account</div>
        <div class="WelcomeBack">Welcome Back</div>
    </div>

    <div class="DontHaveAnAccount">Don’t have an account?</div>
    <div class="SignUp">
        <a href="@Url.Action("Index2", "Signup")">Sign up!</a>
    </div>

    <div class="trademark">
        <div class="LogoHere">Spaghetti's</div>
        <div class="logoImage">
            <img src="/resources/SLE_LOGO.png"  alt="Spaghetti's Logo">
        </div>
    </div>
</div>
</body>
</html>
