            border: 1px #DEDEDE solid
        }

        .Facebook {
            width: 126px;
            height: 44px;
            left: 0px;
            top: 0px;
            position: absolute;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .FacebookLogo {
            width: 22px;
            height: 22px;
            position: relative;
            margin-right: 8px;
        }

        .FacebookLogo img {
