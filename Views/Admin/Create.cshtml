@model Spaghetti.Models.Admin

@{
    ViewData["Title"] = "Create Admin";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Admin</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            font-family: Poppins, sans-serif;
            background-color: #F0F2F5;
            display: flex; /* Enable flexbox */
            justify-content: center; /* Horizontally center */
            align-items: center; /* Vertically center */
        }

        .container {
            max-width: 600px;
            background-color: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
            width: 100%;
        }

        h1, h4 {
            color: black;
            text-align: center;
            font-weight: 600;
        }

        .FirstNameGroup,
        .LastNameGroup,
        .GenderGroup,
        .ProfilePictureGroup,
        .Button {
            width: 100%; /* Use full width of container */
            height: 70px;
            position: relative;
            margin-bottom: 20px; /* Add space between fields */
        }

        .rFirstName, .rLastName, .rGender{
            width: 100%; /* Fill container width */
            height: 70px;
            background: white;
            border-radius: 10px;
            border: 1px #D9D9D9 solid;
        }

        .rFirstName::placeholder,
        .rLastName::placeholder,
        .rGender::placeholder
        {
            text-align: center;
            line-height: 50px;
            font-size: 15px;
            color: #888;
        }

        .firstName,
        .lastName,
        .Gender
        {
            display: none;
            position: absolute;
            left: 24px;
            top: 27px;
            color: #5A5A5A;
            font-size: 14px;
            font-family: Poppins;
            font-weight: 400;
            line-height: 14.50px;
            word-wrap: break-word;
        }

        .form-control-file {
            margin-top: 10px;
            font-size: 14px;
        }

        .Button {
            width: 100%; /* Full width of the container */
            height: 55px;
            background: #3a3e3b;
            border-radius: 10px;
            border: 1px solid #DEDEDE;
            display: flex;
            justify-content: center;
            align-items: center;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .Button:hover {
            background: #a5ada7;
        }

        .Button:active {
            background: #189A3A;
        }

        .Button span.LogIn {
            color: white;
            font-size: 16px;
            font-family: 'Poppins', sans-serif;
            font-weight: 500;
            text-align: center;
            text-transform: uppercase;
            letter-spacing: 1px;
            line-height: 1.2;
        }

    </style>
</head>
<body>
<section class="container">
    <h1>Create Admin</h1>
    <h4>Enter Admin Information</h4>

    <form id="createAdminForm" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
        <div class="FirstNameGroup">
            <label asp-for="FirstName" class="firstName"></label>
            <input asp-for="FirstName" class="rFirstName" placeholder="Enter first name" required />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="LastNameGroup">
            <label asp-for="LastName" class="lastName"></label>
            <input asp-for="LastName" class="rLastName" placeholder="Enter last name" required />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div class="GenderGroup">
            <label asp-for="Gender" class="Gender"></label>
            <select asp-for="Gender" class="rGender" required>
                <option value="" disabled selected>Select Gender</option>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
                <option value="Other">Other</option>
            </select>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ProfilePicture" class="control-label">Profile Picture</label>
            <input asp-for="ProfilePicture" type="file" class="form-control-file" />
            <span asp-validation-for="ProfilePicture" class="text-danger"></span>
        </div>

        <button class="Button" type="submit">
            <span class="LogIn">Create</span>
        </button>
    </form>
</section>

</body>
</html>
